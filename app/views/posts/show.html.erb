<% content_for(:title, "Jonathan Thom | Blog") %>

<div class="page-title">
  <h2><%= link_to 'Blog', posts_path %></h2>
</div>
<div class="container">
  <div class="row">
    <div class="col-sm-2">
      <h3 class="text-left">Other Posts</h3>
      <% @posts.each do |post| %>
        <p><%= link_to post.title, post_path(post) %></p>
      <% end %>
    </div>
    <div class="featured col-sm-10">
      <h2><%= @featured.title %></h2>
      <h4><%= @featured.date %></h4>
      <hr>
      <p><%= @featured.content %></p>
    </div>
  </div>
</div>
