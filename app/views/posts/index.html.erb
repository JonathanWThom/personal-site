<% content_for(:title, "Jonathan Thom | Blog") %>

<% content_for(:page_title, "Blog") %>

<div class="container">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="panel panel-default col-sm-6">
        <div class="panel-heading">
          <h3 class="panel-title"><%= post.title %> - <%= post.date %></h3>
        </div>
        <div class="panel-body">
          <%= link_to truncate(post.content, length: 200, separator: ' '), post_path(post) %>
        </div>
      </div>
    <% end %>
  </div>
</div>
