<% content_for(:title, "Jonathan Thom | Blog") %>

<% content_for(:page_title, "Blog") %>

<div class="container">
  <div class="row">
    <div class="featured col-sm-10 col-sm-push-2">
      <h2><%= @featured.title %></h2>
      <h4><%= @featured.date %></h4>
      <hr>
      <p class="post"><%= raw @featured_content %></p>
      <%= social_share_button_tag(@featured.title, :image => 'jonathan-ernie.jpg') %>
    </div>
    <div class="col-sm-2 col-sm-pull-10">
      <h3 class="text-left">Other Posts</h3>
      <% @posts.each do |post| %>
        <p><%= link_to post.title, post_path(post) %></p>
      <% end %>
    </div>
  </div>
</div>
